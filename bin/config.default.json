{
    "monitor": [
    	{
            "host": "www.google.com",
            "cron": "* * * * * *",
            "description": "Google ping",
            "action": "ping",
            "config": {
                "ipV6": false,
                "timeout": 2
            },
            "on": {
                "success": {
                    "monitor": [
                        {
                            "host": "www.google.com",
                            "action": "http",
                            "config": {
                                "port": 443,
                                "ssl": true,
                                "path": "/"
                            }
                        }
                    ]
                },
                "failure": {
                    "monitor": [
                        {
                            "target": "8.8.8.8",
                            "action": "ping"
                        }
                    ]
                }
            }
        },
        {
        	"host": "www.bing.com",
        	"action": "ping"
        },
        {
        	"host": "www.bing.com",
        	"action": "http"
        },
        {
        	"host": "jj",
        	"action": "ping"
        }
    ]
}
