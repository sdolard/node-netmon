{
    "crontab": [
        {
            "cronTime": "* * * * *",
            "description": "Each second: run on task and one depending on failure and another one when it's finished, no matter the result",
            "enabled": true,
            "task": [
                {
                    "host": "---",
                    "enabled": true,
                    "description": "--- ping",
                    "action": "ping", 
                    "verbose": false,
                    "on": {
                    	"failure": {
                    		"run": [
                    			{
                    				"host": "www.google.fr",
                    				"enabled": true,
                    				"description": "Google.fr ping",
                    				"action": "ping", 
                    				"verbose": false
                    			}
                    		]
                    	},
                    	"complete": {
                    		"run": [
                    			{
                    				"host": "www.bing.com",
                    				"enabled": true,
                    				"description": "bing.com ping",
                    				"action": "ping", 
                    				"verbose": false
                    			}
                    		]
                    	}
                    }
                }
            ]
        }
    ]
}
