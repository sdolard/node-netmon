{
    "crontab": [
        {
            "cronTime": "* * * * *",
            "description": "Each second: one or many tasks without dependency between them",
            "enabled": true,
            "task": [
                {
                    "host": "www.google.fr",
                    "enabled": true,
                    "description": "Google.fr ping",
                    "action": "ping"
                },
                {
                    "host": "www.google.de",
                    "enabled": true,
                    "description": "Google.de ping",
                    "action": "ping"
                }
            ]
        },
        {
            "cronTime": "* * * * *",
            "description": "Each second: one or many tasks with one or many execution dependency per task result, success and failure",
            "enabled": true,
            "task": [
            	{
            		"host": "www.google.com",
            		"enabled": true,
            		"description": "Google.com ping",
            		"action": "ping",
            		"on": {
            			"success": {
            				"run": []
            			},
            			"failure": {
            				"run": []
            			},
            			"complete": {
            				"run": [
            					{
            						"host": "www.bing.com",
            						"enabled": true,
            						"description": "Bing.com ping",
            						"action": "ping"
            					}
            				]
            			}
            		}
            	}
            ]
        },{
            "cronTime": "* * * * *",
            "description": "Each second:one or many task set with execution dependency per task set result, success and failure",
            "enabled": true,
            "task": [
            	{
            		"set": [
            			{
            				"host": "www.google.fr",
            				"enabled": true,
            				"description": "Google.fr ping",
            				"action": "ping",
            				"enabled": false
            			},
            			{
            				"host": "www.google.de",
            				"enabled": true,
            				"description": "Google.de ping",
            				"action": "ping"
            			}
            		],
            		"on": {
            			"success": {
            				"run": []
            			},
            			"failure": {
            				"run": []
            			},
            			"complete": {
            				"run": [
            					{
            						"host": "www.bing.fr",
            						"enabled": true,
            						"description": "Bing.fr ping",
            						"action": "ping"
            					},{
            						"host": "www.bing.de",
            						"enabled": true,
            						"description": "Bing.de ping",
            						"action": "ping"
            					}
            				]
            			}
            		} 
            	}
            ]
        }
    ]
}
